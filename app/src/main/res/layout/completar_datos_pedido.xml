<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/textos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DETALLE DE PAGO"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:background="@color/colorPoll"
        android:textColor="@color/white"
        android:padding="15dp"
        android:textStyle="bold|italic"
        />



    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewDireccionEntrega"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombreProducto"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="50dp">
        <ImageView
            android:id="@+id/imagenDireccion"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="120dp"
            android:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/Direccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="164dp"
            android:hint="Direccion Entrega:"
            android:inputType="textMultiLine"
            android:padding="10dp" />

        <TextView
            android:id="@+id/contenido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:textAlignment="center"
            android:text="Fonavi Mz B lote 9"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewTiempoEstimado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombreProducto"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="50dp">
        <ImageView
            android:id="@+id/logotipo"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="120dp"
            android:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/Tiempo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="188dp"
            android:hint="Tiempo Estimado:"
            android:inputType="textMultiLine"
            android:padding="10dp" />
        <TextView
            android:id="@+id/contenidoTiempo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:textAlignment="center"
            android:text="30 minutos"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewMetodoPago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombreProducto"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="50dp">

        <TextView
            android:id="@+id/Pago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="177dp"
            android:hint="Metodo de Pago"
            android:inputType="textMultiLine"
            android:padding="10dp" />

        <CheckBox
            android:id="@+id/CocaCola"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/EscojaBebida1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:padding="10dp"
            android:text="Efectivo" />

        <CheckBox
            android:id="@+id/InkaKola"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/CocaCola"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="100dp"
            android:padding="10dp"
            android:text="Yape/plin" />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/FinalizarPago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPoll"
        android:layout_marginTop="190dp"
        android:textAlignment="center"
        android:padding="15dp"
        android:text="DETALLE DE PAGO"
        android:textColor="@color/white"
        android:textStyle="bold|italic"
        />
</LinearLayout>